{
  "name": "skylynx-express-server",
  "version": "2.2",
  "description": "Express.js server for Skylynx with Nginx reverse proxy",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && terser dist/server.js -o dist/server.js -c -m"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mssql": "^11.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mssql": "^9.1.7",
    "@types/node": "^22.15.29",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.1",
    "terser": "^5.22.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  }
}
